<div class="evaluation-container">
  {{#if isTeacher}}
  <h5>Prompt: {{evaluation.promptResponse.prompt.title}}</h5>
  <p>Evaluation for {{evaluation.promptResponse.student.name}}</p>
  {{else}}
  <h5>{{evaluation.teacher.name}}'s Prompt: {{evaluation.promptResponse.prompt.title}}</h5>
  {{/if}}
  <p>Grammar: {{evaluation.grammar}} |
  Vocabulary: {{evaluation.vocabulary}} |
  Structure: {{evaluation.structure}} |
  Spelling: {{evaluation.spelling}} |
  Creativity: {{evaluation.creativity}}</p>
  <p>Notes: {{evaluation.notes}}</p>
  {{#if isTeacher}}
    {{#unless showResponseText}}
      <button class="btn btn-info btn-xs" {{action 'toggleShowResponseText'}}>Show Response</button>
    {{else}}
      <p>Response: {{evaluation.promptResponse.text}}</p>
      <button class="btn btn-secondary btn-xs" {{action 'toggleShowResponseText'}}>Hide Response</button>
    {{/unless}}
  {{/if}}
</div>
